---
import LanguagePicker from '../components/LanguagePicker.astro'
---

<div class='flex justify-between max-w-4xl text-[#EEEEEC] mx-auto w-full'>
  <div class='hidden md:block'>
    <h1>David Huertas</h1>
    <span class='text-[#D1D5DB]'>Software Engineer</span>
  </div>

  <div class='block md:hidden mr-2'>
    <h1>DH</h1>
  </div>
  <div class='flex gap-4'>
    <a
      href='https://youtube.com/@ikurotime'
      class='group'
      rel='noreferrer'
      target='_blank'
      ><div
        class='group-hover:border-b-2 group-hover:border-red-500 duration-100'
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='24'
          height='24'
          viewBox='0 0 24 24'
          fill='none'
          stroke='currentColor'
          stroke-width='2'
          stroke-linecap='round'
          stroke-linejoin='round'
          class='lucide lucide-youtube-icon lucide-youtube'
          ><path
            d='M2.5 17a24.12 24.12 0 0 1 0-10 2 2 0 0 1 1.4-1.4 49.56 49.56 0 0 1 16.2 0A2 2 0 0 1 21.5 7a24.12 24.12 0 0 1 0 10 2 2 0 0 1-1.4 1.4 49.55 49.55 0 0 1-16.2 0A2 2 0 0 1 2.5 17'
          ></path><path d='m10 15 5-3-5-3z'></path></svg
        >
      </div></a
    >
    <a
      href='https://twitch.tv/ikurotime'
      class='group'
      rel='noreferrer'
      target='_blank'
      ><div
        class='group-hover:border-b-2 group-hover:border-purple-500 duration-100'
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='24'
          height='24'
          viewBox='0 0 24 24'
          fill='none'
          stroke='currentColor'
          stroke-width='2'
          stroke-linecap='round'
          stroke-linejoin='round'
          class='lucide lucide-twitch-icon lucide-twitch'
          ><path d='M21 2H3v16h5v4l4-4h5l4-4V2zm-10 9V7m5 4V7'></path></svg
        >
      </div></a
    >
    <a
      href='https://twitter.com/ikurotime'
      class='group'
      rel='noreferrer'
      target='_blank'
      ><div
        class='group-hover:border-b-2 group-hover:border-blue-500 duration-100'
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='24'
          height='24'
          viewBox='0 0 24 24'
          fill='none'
          stroke='currentColor'
          stroke-width='2'
          stroke-linecap='round'
          stroke-linejoin='round'
          class='lucide lucide-twitter-icon lucide-twitter'
          ><path
            d='M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z'
          ></path></svg
        >
      </div></a
    >
    <a
      href='https://github.com/ikurotime'
      class='group'
      rel='noreferrer'
      target='_blank'
      ><div
        class='group-hover:border-b-2 group-hover:border-zinc-100 duration-100'
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='24'
          height='24'
          viewBox='0 0 24 24'
          fill='none'
          stroke='currentColor'
          stroke-width='2'
          stroke-linecap='round'
          stroke-linejoin='round'
          class='lucide lucide-github-icon lucide-github'
          ><path
            d='M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4'
          ></path><path d='M9 18c-4.51 2-5-2-7-2'></path></svg
        >
      </div></a
    >
    <LanguagePicker />
  </div>
</div>
