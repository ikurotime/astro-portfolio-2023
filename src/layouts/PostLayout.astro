---
import Prose from './Prose.astro'

import '@fontsource-variable/inter'
import Navbar from './Navbar.astro'
import Head from '../components/Head.astro'
const { language, frontmatter } = Astro.props
---

<html lang={language}>
  <head>
    <meta charset='utf-8' />
    <link
      rel='icon'
      href='data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸ“š</text></svg>'
    />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <Head
      title={frontmatter.title}
      description={frontmatter.description}
      keywords={frontmatter.keywords}
    />
  </head>
  <body class='flex min-h-screen bg-gray-50'>
    <div
      class='flex flex-col py-12 md:p-12 flex-1 max-w-96 md:max-w-5xl mx-auto'
    >
      <Navbar />
      <div class='flex flex-col md:flex-row gap-4 py-4'>
        <div
          class='flex flex-col max-w-[850px] m-auto gap-2 bg-white py-8 sm:p-8 px-4 md:p-14 border shadow'
        >
          <span class='text-gray-500'>
            {new Date(frontmatter.pubDate).toLocaleDateString()}
          </span>
          <h1 class='text-2xl md:text-4xl font-bold my-8'>
            {frontmatter.title}
          </h1>
          <Prose frontmatter={frontmatter}>
            <slot />
          </Prose>
        </div>
      </div>
    </div>
    <style>
      body {
        font-family: 'Inter Variable', sans-serif;
      }
    </style>
  </body>
</html>
