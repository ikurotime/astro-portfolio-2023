---
import Prose from './Prose.astro'
import '@fontsource-variable/inter'
import Head from '../components/Head.astro'
const { language, frontmatter } = Astro.props
---

<html lang={language}>
  <head>
    <meta charset='utf-8' />
    <link
      rel='icon'
      href='data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸ“š</text></svg>'
    />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <Head
      title={frontmatter.title}
      description={frontmatter.description}
      keywords={frontmatter.keywords}
    />
  </head>
  <body class='flex min-h-screen bg-[#111110] w-full'>
    <div class='flex flex-row w-full'>
      <div class='flex flex-col m-auto gap-2 sm:p-8 px-4 md:p-14 max-w-[75ch]'>
        <a class='text-[#B5B3AD] font-bold text-xl mt-6' href='/'>
          &lt;- Blog
        </a>
        <h1 class='text-2xl text-[#EEEEEC] md:text-4xl font-bold mb-2'>
          {frontmatter.title}
        </h1>
        <span class='text-[#B5B3AD] text-lg mb-4'>
          {frontmatter.description}
        </span>
        <span class='text-[#B5B3AD]'>
          {new Date(frontmatter.pubDate).toLocaleDateString()}
        </span>
        <Prose frontmatter={frontmatter}>
          <slot />
        </Prose>
      </div>
    </div>

    <style>
      body {
        font-family: 'Inter Variable', sans-serif;
      }
    </style>
  </body>
</html>
