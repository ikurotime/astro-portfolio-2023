---
const { title, description, tags } = Astro.props
---

<div
  class='flex py-4 px-4 flex-col gap-2 border rounded-md bg-white hover:shadow transition-shadow ease-in-out duration-300'
>
  <span class='text-zinc-800 text-lg'><strong>{title}</strong></span>
  <span>{description}</span>

  <div class='flex items-center w-full gap-2'>
    {
      tags &&
        tags.map((tag: string) => (
          <span class='text-sm px-2 py-1 border rounded-md bg-slate-200'>
            {tag}
          </span>
        ))
    }
  </div>
</div>
